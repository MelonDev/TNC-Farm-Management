<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/data_card_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/noti_card_width"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/data_card_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:clickable="false"
            android:fontFamily="@font/sukhumvit_bold"
            android:text="ข้อความ"
            android:textColor="#898989"
            android:textSize="26dp"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/data_card_card_history_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="16dp"
            android:clickable="false"
            android:visibility="gone"
            app:cardBackgroundColor="#f0dcdcdc"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:clickable="false"
                android:fontFamily="@font/sukhumvit_text"
                android:text="ประวัติ"
                android:textColor="#898989"
                android:textSize="22dp"
                android:visibility="visible" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="16dp"
                android:rotation="180"
                android:src="@drawable/ic_back_icon"
                android:tint="#898989" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/data_card_card_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="false"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/data_card_card_icon_area"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:clickable="false"
                    app:cardBackgroundColor="?attr/colorPrimary"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/data_card_card_icon_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorWhite"
                        android:src="@drawable/ic_chicken_icon"
                        android:tint="@color/colorWhite" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/data_card_card_more_area"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:clickable="false"
                    android:visibility="visible"
                    app:cardBackgroundColor="#EDEDED"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:rotation="0"
                        android:src="@drawable/ic_more"
                        android:tint="#b4b4b4" />
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="82dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="70dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/data_card_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sukhumvit_bold"
                        android:singleLine="true"
                        android:text="หัวข้อ"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/data_card_title_description_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:fontFamily="@font/sukhumvit_light"
                        android:singleLine="true"
                        android:text="รหัสไอดีรายการ"
                        android:textColor="@color/colorText"
                        android:textSize="16dp" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="16dp">

                <!-- Information Card -->
                <LinearLayout
                    android:id="@+id/data_card_card_info_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sukhumvit_bold"
                            android:singleLine="true"
                            android:text="วันที่รับเข้า"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/data_card_card_info_date_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/sukhumvit_light"
                            android:singleLine="true"
                            android:text="1 มกราคม 2500"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sukhumvit_bold"
                            android:singleLine="true"
                            android:text="อายุไก่ปัจจุบัน"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/data_card_card_info_age_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/sukhumvit_light"
                            android:singleLine="true"
                            android:text="0 วัน"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/sukhumvit_bold"
                            android:singleLine="true"
                            android:text="วัตถุประสงค์การเลี้ยง"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                        <TextView
                            android:id="@+id/data_card_card_info_objective_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:fontFamily="@font/sukhumvit_light"
                            android:singleLine="true"
                            android:text="ไม่ทราบ"
                            android:textColor="@color/colorText"
                            android:textSize="19dp" />

                    </RelativeLayout>
                </LinearLayout>

                <!-- Messages Card -->
                <RelativeLayout
                    android:id="@+id/data_card_card_message_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="16dp">

                    <TextView
                        android:id="@+id/data_card_card_message_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sukhumvit_light"
                        android:text="ข้อความ"
                        android:textColor="@color/colorText"
                        android:textSize="19dp" />


                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/data_card_card_menu_dialog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dialog_overlay"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/data_card_card_menu_dialog_card"
                    android:layout_width="180dp"
                    android:layout_height="110dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/sukhumvit_bold"
                                android:text="ปิด"
                                android:textColor="@color/colorText"
                                android:textSize="20dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="#f44336">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/sukhumvit_bold"
                                android:text="เก็บประวัติ"
                                android:textColor="@color/colorWhite"
                                android:textSize="20dp" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</RelativeLayout>
