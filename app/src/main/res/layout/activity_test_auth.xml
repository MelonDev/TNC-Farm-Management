<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestAuthActivity"
    android:background="#EDEDED"
    >

    <LinearLayout
        android:id="@+id/testLogin_profile_area"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/testLogin_profile_image"
            android:background="#dcdcdc"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <TextView
            android:id="@+id/testLogin_profile_name"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:fontFamily="@font/sukhumvit_light"
            android:textColor="@color/colorText"
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/testLogin_profile_phone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:fontFamily="@font/sukhumvit_light"
            android:textColor="@color/colorText"
            android:textSize="22dp"
            />
        <TextView
            android:id="@+id/testLogin_profile_email"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/sukhumvit_light"
            android:textColor="@color/colorText"
            android:textSize="22dp"
            />

    </LinearLayout>


    <LinearLayout
        android:paddingBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.gms.common.SignInButton
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="50dp"

            />

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_in_btn"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="25dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ลงชื่อเข้าใช้ผ่านบัญชี Google"
                android:textSize="18dp"
                android:layout_gravity="center"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/sign_out_btn"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#dedede"
            app:cardCornerRadius="25dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ลงชื่อออก"
                android:textSize="18dp"
                android:layout_gravity="center"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>