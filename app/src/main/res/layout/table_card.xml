<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/noti_card_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/table_card_image"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/table_card_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/sukhumvit_bold"
                    android:text="อายุไก่"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="26dp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="6dp"
                    android:layout_marginTop="6dp"
                    >

                    <TextView
                        android:id="@+id/table_card_second_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/sukhumvit_bold"
                        android:text="ชนิดของวัคซีน"
                        android:textColor="@color/colorText"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/table_card_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="ข้อความ"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:fontFamily="@font/sukhumvit_light"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/table_card_third_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/sukhumvit_bold"
                        android:text="วิธีใช้"
                        android:textColor="@color/colorText"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/table_card_how_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="ข้อความ"
                        android:textColor="@color/colorText"
                        android:textSize="20dp"
                        android:fontFamily="@font/sukhumvit_light"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/table_card_indicator"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:rotation="270"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_back_icon"
        android:tint="#9f9f9f" />

</LinearLayout>